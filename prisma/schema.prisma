// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Event {
  id        Int      @id @default(autoincrement())
  title      String
  location  String
  // date String
  date      DateTime @default(now())
  capacity Int
  filled Int

  @@map("events") // This is the table name in the database
}

model Student {
  id Int @id @default(autoincrement())
  name String
  cpf String
  password String
  email String
  events String

  @@map("students") 
}

model School {
  id Int @id @default(autoincrement())
  name String
  name_res String
  cpf_res String
  num_students Int
  password String
  email_res String
  events String

  @@map("schools") 
}
